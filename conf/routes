# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Views
GET     /                              controllers.Application.main(any = "whatever")
GET     /views/index                   controllers.Application.index
GET     /views/search                  controllers.Application.search
GET     /auth                          controllers.Application.authenticate

# API
GET     /api/gists/listForks/:id       controllers.Api.listForks(id: Long)
GET     /api/*any                      controllers.Application.notFound(any)

# Search API
GET     /search                        controllers.Search.search(q: String)
POST    /search                        controllers.Search.insert

# QUESTIONS
GET     /api/questions/create          controllers.Questions.createView
GET     /api/questions/:id             controllers.Questions.get(id: Long)
PUT     /api/questions                 controllers.Questions.create
GET     /api/questions                 controllers.Questions.listView
GET     /api/question                  controllers.Questions.readView

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                  controllers.Assets.at(path="/public", file)

# Map all unknow routes to the main so they will be handle by Angular
GET    /*any                           controllers.Application.main(any)
